<h3>User Login Form_tag</h3>

<% if flash[:alert] %>
  <h3 style=color:red><%= flash[:alert] %></h3>
<% end %>

<%= form_tag("/sessions") do %>
<p>
  <%= label_tag "email", "Email:" %>
  <%= text_field_tag "email" %>
</p>
<p>
  <%= label_tag "password", "password:" %>
  <%= password_field_tag "password" %>
</p>
<%= submit_tag "Login" %>
<% end %>

