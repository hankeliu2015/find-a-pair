<!DOCTYPE html>
<html>
  <head>
    <title>FindAPair</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to "Open Pairs List", pairs_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New Pair", new_pair_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to_unless_current "Login", login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Register", register_path, class: "nav-link" %>
          </li>


          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
  </header>

<% if false %>
    <nav>
      <section>
        <%= link_to_unless_current "Home", root_path %>
        <%= link_to_unless_current "Open Pairs List", pairs_path %>
        <%= link_to_unless_current "New Pair", new_pair_path %>
      </section>

      <section class="utility">
        <% if session[:current_user_id] %>
          <p>You are logged in as : <%= @current_user.email %> | <a href="/logout">Logout</a></p>
        <% else %>
          <%= link_to_unless_current "Login", login_path %> |
          <%= link_to_unless_current "Register", register_path %>
        <% end %>
      </section>
    </nav>
<% end %>
    <%= yield %>
  </body>
</html>
